{
    "name": "gpupo/pack-symfony-api-platform",
    "description": "Custom API Platform pack",
    "homepage": "https://opensource.gpupo.com/pack-symfony-api-platform/",
    "authors": [
        {
            "name": "Gilmar Pupo",
            "email": "contact@gpupo.com"
        }
    ],
    "keywords": ["common", "development"],
    "license": "MIT",
    "require": {
      "php": "^7.4",
      "ext-ctype": "*",
      "ext-iconv": "*",
      "symfony/flex": "^1.3.1",
      "gpupo/pack-symfony-common": "*",
      "webonyx/graphql-php": "^0.13.8",
      "api-platform/core": "^2.5.4",
      "api-platform/api-pack": "^1.2.1"
    },
    "autoload": {
        "psr-4": {
            "Gpupo\\PackSymfonyApiPlatform\\": "src",
            "Gpupo\\PackSymfonyApiPlatform\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "gpupo/pack-symfony-dev": "*",
        "api-platform/schema-generator": "^2.2",
        "symfony/maker-bundle": "*",
        "symfony/profiler-pack": "*"
    },
    "scripts": {
        "test": "APP_ENV=test simple-phpunit"
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
